<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    tools:context=".recipe10_Activity">

    <TextView
        android:id="@+id/direction_detail"
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:text="1: Heat the oven to 200C.\n2: Toss the onion, tomatoes, 2 tbsp curry paste, the chickpeas and 200ml water together in a deep baking tray. Roast for 15 mins.\n3: Season, and brush the remaining curry paste over the salmon fillets.\n4: Place the salmon into the veg in the tin and roast for another 8-10 mins.\n5: Mix the yogurt into the vegetables in the tray, and serve with warm naan."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direction_main" />

    <TextView
        android:id="@+id/nutrition_main"
        android:layout_width="408dp"
        android:layout_height="27dp"
        android:text="Nutritional Value:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direction_detail" />

    <TextView
        android:id="@+id/nutrition_detail"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:text="Per serving: 796 calories; protein 54; carbohydrates 62; fat 34g; fiber 13g; sodium 1.7g"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutrition_main" />

    <TextView
        android:id="@+id/direction_main"
        android:layout_width="402dp"
        android:layout_height="26dp"
        android:text="Steps:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingred_tv07" />

    <CheckBox
        android:id="@+id/ingred_cb07"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="Fat-free Yogurt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingred_cb06"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:id="@+id/ingred_cb05"
        android:layout_width="0dp"
