        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingred_cb05"
        app:layout_constraintTop_toBottomOf="@+id/ingred_tv04" />

    <TextView
        android:id="@+id/ingred_tv06"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingred_cb06"
        app:layout_constraintTop_toBottomOf="@+id/ingred_tv05" />

    <TextView
        android:id="@+id/ingred_tv07"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="2 Tablespoon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ingred_cb06"
